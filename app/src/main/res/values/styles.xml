<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">


    </style>
    
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="common_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/bg_white_border_grey</item>
    </style>

    <style name="common_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/material_blue_700</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="common_item_image_view">
        <item name="android:layout_width">@dimen/listening_image_item_view_size</item>
        <item name="android:layout_height">@dimen/listening_image_item_view_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="vocabulary_item_image">
        <item name="android:layout_width">@dimen/vocabulary_item_image_size</item>
        <item name="android:layout_height">@dimen/vocabulary_item_image_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="vocabulary_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/vocabulary_item_layout_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/bg_white_border_grey</item>
    </style>

</resources>
