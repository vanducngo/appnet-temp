<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_vocabulary_details_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Vocabulary"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ListView
        android:id="@+id/lv_vocabulary_details_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_vocabulary_main_description"
        android:layout_margin="3dp"
        android:background="@android:color/white"
        android:divider="#FFFFFF"
        android:dividerHeight="5dp"></ListView>

    <RelativeLayout
        android:id="@+id/expanded_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_half_transparent"
        android:visibility="invisible">
        <include
            android:id="@+id/rl_vocabulary_popup"
            layout="@layout/vocabulary_details_popup_view"
            />
    </RelativeLayout>
</RelativeLayout>