<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_white_border_black_bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/adapter_left_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:background="@drawable/bg_white_border_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adapter_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/adapter_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="User name"
            android:textSize="16dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/adapter_post_text"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/adapter_left_layout"
        android:text="post" />
</RelativeLayout>